<h1 class="text-center">New Matters</h1>
<h3 class="text-center">Associate Actions</h3>

<div class="container">
	<%= form_for @matter do |f| %>
		<div class="form-group">
			<%= f.label :title %>
			<%= f.text_field :title, :class => "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :description %>
			<%= f.text_area :description, :class => "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :open %>
			<%= f.date_field :open, :class => "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :closed %>
			<%= f.date_field :closed, :class => "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :due %>
			<%= f.date_field :due, :class => "form-control" %>
		</div>
		<div class="form-group">
			<%= f.collection_select :actn_ids, @actns, :id, :title %>
			
		</div>
		<%= f.submit :class => "btn btn-success" %>

	<% end %>
</div>